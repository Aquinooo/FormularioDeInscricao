@{
    ViewData["Title"] = "Página Inicial";
}
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            max-width: 700px;
            margin: 60px auto;
            padding: 30px;
            background-color: #ffffff;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        h1 {
            color: #2C3E50;
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2em;
            color: #7F8C8D;
            margin-bottom: 30px;
        }

        footer {
            background-color: #BDC3C7;
            color: #ffffff;
            text-align: center;
            padding: 15px;
            font-size: 1em;
            position: relative;
            bottom: 0;
            width: 100%;
            border-top: 1px solid #ddd;
        }

        footer p {
            margin: 0;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Bem-vindo!</h1>
        <p>Por favor, clique em "Faça sua inscrição para se cadastrar!"</p>
    </div>

    <footer>
        <p>© 2024 Seu Site - Todos os direitos reservados</p>
    </footer>

</body>

</html>


